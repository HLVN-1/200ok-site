{% macro speaker_section(speaker) %}
<li class="ssm:flex justify-center items-center flex-row-reverse mb-24 sm:mb-12 ">
    <div class="sm:w-1/2 xl:w-2/3 mb-4 sm:mb-0 sm:pl-6">
        <h2 class="font-bold text-xl sm:text-3xl">{{ speaker.talkTitle }}</h2>
        <h3 class="text-lg sm:text-xl text-md">
            <span class="">{{ speaker.name }}</span>
            <span class="block text-base sm:text-lg">{{ speaker.name }}</span>
            <span class="block text-base sm:text-lg">{{speaker.email}}</span>
            <a class="block text-base sm:text-lg underline text-blue-600" target="_blank" href="https://twitter.com/{{speaker.twitter}}"><i class="fab fa-twitter" aria-hidden="true"></i>/{{speaker.twitter}}</a>
            <span class="block text-base sm:text-lg">{{speaker.website}}</span>
        </h3>
    </div>
    <img src="{{ speaker.headshotURL }}" alt="{{ speaker.name }}" class=" block w-full shadow-md rounded-lg hover:ring-2 hover:ring-200ok-orange" />

  
</li>
{% endmacro %}

<div>
  <h3 class="text-center">Speakers</h3>
  <ul class="flex flex-wrap justify-center">
    {% for speaker in speakers %}
    {{ speaker_section(speaker) }}
    {% endfor %}
  </ul>
</div>