<% if (page) { %>
<div class="w-full my-4 flex">
  <div class="border-2 border-black bg-white flex justify-between leading-normal">
    <div class="w-1/3 overflow-hidden text-white p-4 bg-black text-center">
      <div class="mt-0 text-white font-bold text-2xl sm:text-3xl"><%- format_time(event.start) %></div>
      <div class="text-center">
        <div class="text-white leading-none text-white text-sm sm:text-2xl text-white mb-4"><%- page.speaker %></div>
        <img class="rounded-full" src="/assets/media/speakers/<%- page.photo %>" alt="Avatar of <%- page.speaker %>">
      </div>
    </div>
    <div class="w-2/3 mb-8 p-4">
      <div class="text-black font-bold text-lg sm:text-2xl mb-2 leading-tight"><%- page.talk %></div>
      <div class="text-black text-sm sm:text-base"><%- page.content %></div>
    </div>
  </div>
</div>
<% } %>
